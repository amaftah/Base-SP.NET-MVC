@using POS.Web.ViewModels
@model CartViewModel
@{
    var cartHasItems = Model != null && Model.Items != null && Model.Items.Any();
}

@if (cartHasItems)
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>
                                Item
                            </th>
                            <th>
                                Quantity
                            </th>
                            <th>
                                Total
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <a href="~/Product/@item.Product.ID">@item.Product.Name</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Total)
                                </td>
                                <td>
                                    <a href="#" onclick="removeItem(@item.Product.ID, @item.Quantity);"><span class="glyphicon glyphicon-trash"></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10">

            </div>
            <div class="col-md-2">
                <span class="lead">Total @Html.DisplayFor(model => model.Total)</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <a href="~/Cart/Checkout" class="btn btn-default btn-primary">Checkout</a>
                |
                <a href="#" onclick="clearCart();">Clear Cart</a>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        
    </script>
}
else
{
    <span>Your Cart is empty.</span>
}
